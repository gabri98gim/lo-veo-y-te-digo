---
// Importamos las fuentes
import "@fontsource/playfair-display";
import "@fontsource/lato";

// Importamos tus componentes (asegúrate de tenerlos creados)
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Blog de cine y reseñas honestas" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<script is:inline>
			// Lógica: Si el usuario guardó 'dark', lo ponemos. Si no, POR DEFECTO es claro.
			if (localStorage.theme === "dark") {
				document.documentElement.classList.add("dark");
			} else {
				document.documentElement.classList.remove("dark");
				localStorage.theme = "light";
			}
		</script>
	</head>

	<body
		class="bg-[#F9F9F9] dark:bg-[#121212] text-gray-900 dark:text-gray-100 transition-colors duration-300 min-h-screen flex flex-col font-sans"
	>
		<Header />

		<main
			class="w-full max-w-screen-2xl mx-auto px-4 sm:px-6 lg:px-8 py-8 flex-grow"
		>
			<slot />
		</main>

		<Footer />
	</body>
</html>
